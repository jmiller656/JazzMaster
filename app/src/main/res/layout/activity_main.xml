                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="50dp"
                android:text=""
                android:layout_toRightOf="@id/currentChord"
                android:layout_above="@id/add"/>
            <TextView
