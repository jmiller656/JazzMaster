                android:layout_height="wrap_content"
                android:text="Remove"
                android:id="@+id/Remove"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:onClick="remove"
                android:minHeight="0dp"
                android:minWidth="0dp"/>
            <Button
